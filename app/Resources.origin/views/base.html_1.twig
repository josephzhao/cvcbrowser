            #map2uweb_maptoc {
                margin-left: 5px;
            }
            div.olControlMousePosition_top {
                top:5px;
                right: 10px;
                height:20px;
                padding-right: 3px;
                display: block;
                color: #ff0;
                position: absolute;
                font-family: Arial;


            }
            div.olControlMousePosition_bottom {
                top: 32px;
                right: 10px;
                padding-right: 3px;
                height:20px;
                display: block;
                color: #ff0;
                position: absolute;
                font-family: Arial;

            }

            #webgismap_layerSwitcher, #layersDiv {
                text-align: left;
