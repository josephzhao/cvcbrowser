            .navbar-inner-sm .nav > li > a {float: none;padding: 0px 0px;line-height: 14px;color: #999999;text-decoration: none;text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);}
            .navbar-inner-sm .nav > li > a:hover {background-color: #003753;color: #ffffff;text-decoration: none;}
            .navbar-inner-sm .nav .active > a,.navbar .nav .active > a:hover {color: #ffffff;text-decoration: none;background-color: #003753;}
