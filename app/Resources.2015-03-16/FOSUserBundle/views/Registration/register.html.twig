{% extends "base.html.twig" %}
{% block body %}
    {% block header %}
        {{parent()}}
    {% endblock %}
{% block maincontent %}
{% endblock %}


{% block captcha_widget %}
{% spaceless %}




<div class="container">
    <div class="row">
        <div class="span3 offset4">

            <div class="page-header">
                <h1><small>Create an account</small></h1>
            </div>

            <form action="{{ path('fos_user_registration_register') }}" method="post" novalidate>
                <fieldset class="well">
                        {{ form_widget(form) }}
                    </fieldset>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success btn-midium span2"><i class="icon-user"></i> Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>      
{% endspaceless %}
{% endblock %}
{% endblock %}
