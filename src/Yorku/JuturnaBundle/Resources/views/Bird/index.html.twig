{#% extends '::base.html.twig' %#}

{% block body -%}
    <h1>Bird list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Birdname</th>
                <th>Imagename</th>
                <th>Imagepath</th>
                <th>Description</th>
                <th>Websiteurl</th>
                <th>Imagetip</th>
                <th>Enabled</th>
                <th>Lng</th>
                <th>Lat</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bird_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.birdname }}</td>
                <td>{{ entity.imageName }}</td>
                <td>{{ entity.imagePath }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.websiteUrl }}</td>
                <td>{{ entity.imageTip }}</td>
                <td>{{ entity.enabled }}</td>
                <td>{{ entity.lng }}</td>
                <td>{{ entity.lat }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bird_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bird_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('bird_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
