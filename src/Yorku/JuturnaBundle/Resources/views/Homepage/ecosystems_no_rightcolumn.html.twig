{% if category.rightColumnWidth == null %}
    <div class="col-lg-5 col-sm-5 col-xs-5  col-lg-offset-1 col-sm-offset-1 col-xs-offset-1">
        {% autoescape 'html' %}
            {{category.description }}
        {% endautoescape %}
    </div>
    <div class="col-lg-5 col-sm-5 col-xs-5 ">
        {% autoescape 'html' %}
            {{category.rightColumn }}
        {% endautoescape %}
    </div>
{% else %}
    <div class="col-lg-{{10-category.rightColumnWidth}} col-sm-{{10-category.rightColumnWidth}} col-xs-{{10-category.rightColumnWidth}}  col-lg-offset-1 col-sm-offset-1 col-xs-offset-1">
        {% autoescape 'html' %}
            {{category.description }}
        {% endautoescape %}
    </div>
    <div class="col-lg-{{category.rightColumnWidth}} col-sm-{{category.rightColumnWidth}} col-xs-{{category.rightColumnWidth}}">
        {% autoescape 'html' %}
            {{category.rightColumn }}
        {% endautoescape %}
    </div>
{% endif %}