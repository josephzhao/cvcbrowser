{% extends '::homepage.layout.html.twig' %}
{% block page_stylesheets %}
    {{ parent() }}
    <style>
        #homepageFlashCarousel ol.carousel-indicators {
            top:20px;
            right:20px;
            float: right;

        }
        #homepageFlashCarousel div.carousel-caption {
            padding-bottom: 0px;
            opacity: 0.9;

        }
    </style>
{% endblock %}

{% block body %}
    {% block page_header %}
        {{ parent() }}
    {% endblock %}
    {% block page_container %}
        <div class="container-fluid maincontent">

            <div class="row-fluid">
                <div class="col-lg-8 col-sm-8" style="border: 1px solid gainsboro;margin:15px 0px 10px -5px;padding:10px; border-radius: 10px;min-height: 500px;">
                    <div class="row-fluid homepage_flash" style="vertical-align:middle;height:315px; border: 0px solid green;">
                        {{ render(controller("YorkuJuturnaBundle:Homepage:flashs")) }}
                    </div>

                    <div class="row-fluid" style="padding: 10px 15px;color: #0078A8; text-justify:  auto;">
                        <h4>{{'Eco System Services'|upper}}</h4>
                        {% if ecosystems is defined %}
                            {% for ecosystem in ecosystems %}
                                <div>
                                    <b> {{ecosystem.name|title}}:</b>
                                    <p> bllbla ecosystem description<</p>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                    <div  class="row-fluid"  style="padding: 10px 15px;color: #0078A8; text-justify:  auto;">
                        <h4>{{'Human Well Being Domain'|upper}}</h4>
                        {% if wellbeings is defined %}
                            {% for wellbeing in wellbeings %}
                                <div>
                                    <b> {{wellbeing.name|title}}:</b>
                                    <p>bllbla well being description</p>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                    {#  
                      <div class="row-fluid" style="height:300px; border: 0px solid yellow;margin:10px 0px;padding:0px;">
                          <div class="col-lg-4 col-sm-4" style="border-radius: 8px;margin:0px;padding:0px 2px;overflow: hidden;">
                              {{ render(controller("YorkuJuturnaBundle:Homepage:images", { 'type': 'Well-Being' })) }}
                          </div>
                          <div class="col-lg-4 col-sm-4" style="border-radius: 8px;margin:0px;padding:0px 2px;overflow: hidden;">
                              {{ render(controller("YorkuJuturnaBundle:Homepage:images", { 'type': 'Ecosystems' })) }}
                          </div>
                          <div class="col-lg-4 col-sm-4 homepage_mapsnapshot" style="border-radius: 8px; padding:0px 2px;overflow: hidden;">
                              <a href="{{path('homepage_map')}}" ><img src="/uploads/images/header_logos/map.png" width="100%" ></a>
                          </div>
                      </div>#}

                </div>
                <div class="col-lg-4 col-sm-4">
                    <div style="margin: 15px -20px 15px 0;padding:10px; border: 1px solid gainsboro; border-radius: 8px;">
                        {% block indicator_column_block %}
                            {{ sonata_block_render({ 'type': 'yorku_juturna.block.indicator_column' }, { 'mode': 'public'}) }}
                        {% endblock %}
                    </div>
                    <div class="row-fluid homepage_mapsnapshot" style="margin: 15px -20px 15px 0;padding:2px; border: 1px solid gainsboro; overflow: hidden;border-radius: 8px;">
                        <a href="{{path('homepage_map',{locale:_locale,view:'well-being'})}}" ><img style="border-radius: 5px;" src="/uploads/images/header_logos/map.png" width="100%" ></a>
                    </div>
                </div>
            </div>
        </div>
        {% block footer %}
            {{ parent() }}
        {% endblock %}
