{% extends '::baseLayout.html.twig' %}

{% block page_stylesheets %}
    {{ parent() }}
    {% include "::mapstylesheets.html.twig" %}
{% endblock %}
{% block body %}
    {% block page_header %}
        {{ parent() }}
    {% endblock %}
    {% block page_container %}
        <div class="container-fluid maincontent">
            {% if category is defined %}
                <div class="row-fluid ecosystem_page_image">

                    {% set images = category.flashImages|unserialize %}
                    {% if images|length >0 %}
                        <h1>{{category.title|title}}</h1>
                        <div style="text-justify:  auto;" id="ecosystem_image">
                            <img src="/uploads/images/categories/{{category.id}}/{{images[0]}}"  style="width:100%;">

                        </div>

                    {% endif %}

                </div>
                <div class="row-fluid">
                    {% if (category.rightColumn == null or category.rightColumn|length == 0) and (category.description and category.description | length > 0) %}
                        <div class="col-lg-10 col-sm-10 col-xs-10  col-lg-offset-1 col-sm-offset-1 col-xs-offset-1">
                            {% autoescape 'html' %}
                                {{category.description }}
                            {% endautoescape %}
                        </div>
                    {% elseif (category.rightColumn and category.rightColumn|length > 0) and (category.description == null or  category.description | length == 0) %}
                        <div class="col-lg-10 col-sm-10 col-xs-10  col-lg-offset-1 col-sm-offset-1 col-xs-offset-1">
                            {% autoescape 'html' %}
                                {{category.rightColumn }}
                            {% endautoescape %}
                        </div>
                    {% else %}

                        {% if category.rightColumnWidth == null %}
                            <div class="col-lg-5 col-sm-5 col-xs-5  col-lg-offset-1 col-sm-offset-1 col-xs-offset-1">
                                {% autoescape 'html' %}
                                    {{category.description }}
                                {% endautoescape %}
                            </div>
                            <div class="col-lg-5 col-sm-5 col-xs-5 ">
                                {% autoescape 'html' %}
                                    {{category.rightColumn }}
                                {% endautoescape %}
                            </div>
                        {% else %}
                            <div class="col-lg-{{10-category.rightColumnWidth}} col-sm-{{10-category.rightColumnWidth}} col-xs-{{10-category.rightColumnWidth}}  col-lg-offset-1 col-sm-offset-1 col-xs-offset-1">
                                {% autoescape 'html' %}
                                    {{category.description }}
                                {% endautoescape %}
                            </div>
                            <div class="col-lg-{{category.rightColumnWidth}} col-sm-{{category.rightColumnWidth}} col-xs-{{category.rightColumnWidth}}">
                                {% autoescape 'html' %}
                                    {{category.rightColumn }}
                                {% endautoescape %}
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            {% endif %}
        </div>

    {% endblock %}
    {% block footer %}
        {{ parent() }}
    {% endblock %}
    {% block page_javascripts %}
        {{ parent() }}

    {% endblock %}
    <script>
        $(function () {
            window.onresize = function () {
                $("#ecosystem_image img").css({"margin-top": ($("#ecosystem_image").height() - $("#ecosystem_image img").height()) / 2 + "px"});
            };
        });
    </script>
{% endblock %}
