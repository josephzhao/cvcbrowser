{# empty Twig template #}
<div >
  
    {% if flashs|length > 0 %}
        {# {% for image in images %}
 
             <a href="#" target="_blank"><img style="border: 1px #0000FF solid" src="{{ asset('uploads/images/')}}{{image}}" width="220px" style="width:220px;"/></a><br>
 
         {% endfor %}#}

        <div id="homepageFlashCarousel" class="carousel slide"  data-ride="carousel">
            <ol class="carousel-indicators">
                {% set i=0 %}
                {% for flash in flashs %}
                    <li data-target="#homepageFlashCarousel" data-slide-to="{{i}}" {% if i==0 %} class="active" {% endif %}>
                    </li>
                    {% set i=i+1 %}
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% set i=0 %}
                {% for flash in flashs %}
                    <div id="homepageFlash-image-{{i}}" data-id="{{i}}" data-slide-no="{{i}}" class="item carousel-item  {% if i==0%} active {% endif %}" style="padding:0 5px;">
                        <a href="{{flash.getUrl()}}" target="_blank"><img src="/uploads/images/homepageflashs/{{flash.getImage()}}"  style="height:315px;margin:5px auto;border-radius: 8px;"></a>
                        <div class="carousel-caption">
                            <h4>{{flash.getTitle()}}</h4>
                            <p>{{flash.getIntroduce()}}</p>
                        </div>
                    </div>
                    {% set i=i+1 %}
                {% endfor %}
            </div>

            <a class="left carousel-control" href="#homepageFlashCarousel" data-slide="prev"><span class="icon-prev"></span></a>
            <a class="right carousel-control" href="#homepageFlashCarousel" data-slide="next"><span class="icon-next"></span></a>

        </div>
    {% endif %}
</div>