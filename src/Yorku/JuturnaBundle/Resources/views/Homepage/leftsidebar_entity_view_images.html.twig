
{% if count > 1 %}
    <div id="leftsidebar_indicator_benefit_flash" class="carousel slide"  data-interval="false" data-pause="hover" style=" border:1px solid background;border-radius: 5px;">
        {% include 'YorkuJuturnaBundle:Homepage:leftsidebar_entity_view_images_carousel_indicators.html.twig' with {'entities':entities,'count':count} %}
        {% include 'YorkuJuturnaBundle:Homepage:leftsidebar_entity_view_images_carousel_inner.html.twig' with {'entities':entities,'count':count} %}

        <ol class="carousel-indicators">

            {% for indicatorbenefitimage in entities.indicatorbenefitimages %}
                {% set images=indicatorbenefitimage.getFileName()|unserialize %}
                {% if images|length > 0 %}
                    {% for image in images %}
                        <li data-target="#leftsidebar_indicator_benefit_flash" data-slide-to="{{loop.index-1}}" {% if loop.index==1 %} class="active" {% endif %}>
                        </li>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </ol>
        <div class="carousel-inner" style="border-radius: 5px;">

            {% for indicatorbenefitimage in entities.indicatorbenefitimages %}
                {% set images=indicatorbenefitimage.getFileName()|unserialize %}
                {% if images|length > 0 %}

                    {% for image in images %}
                        <div style="border-radius: 5px;" data-id="{{loop.index-1}}" data-slide-no="{{loop.index-1}}"  class="item  carousel-item {% if loop.index==1 %} active {% endif %}" >
                            {% autoescape 'html' %}
                                <img style="border-radius: 5px;width:300px;height:200px;overflow: hidden;" src="{{ asset('uploads/images/indicatorbenefitimages/'~indicatorbenefitimage.id~"/")}}{{image}}" width="100%">
                            {% endautoescape %}
                            <div class="carousel-caption">
                                <h5>{{indicatorbenefitimage.getImageTitle()}}</h5>
                                <p>{{indicatorbenefitimage.getImageCaption()}}</p>
                            </div>
                        </div>

                    {% endfor %}

                {% endif %}
            {% endfor %}
        </div>
        <a class="left carousel-control"  data-slide="prev"><span>‹</span></a>
        <a class="right carousel-control" data-slide="next"><span>›</span></a>
    </div>
{% elseif  count == 1%}
            {% include 'YorkuJuturnaBundle:Homepage:leftsidebar_entity_view_images_single.html.twig' with {'entities':entities,'count':count} %}

    <div id="leftsidebar_indicator_benefit_flash" style="border-radius: 5px;">
        <div class="carousel-inner" style="border-radius: 5px;">
            {% for indicatorbenefitimage in entities.indicatorbenefitimages %}
                {% set images=indicatorbenefitimage.getFileName()|unserialize %}
                {% if images|length > 0 %}
                    {% for image in images %}
                        {% autoescape 'html' %}
                            <img style="border-radius: 5px;width:300px;height:200px;overflow: hidden;" src="{{ asset('uploads/images/indicatorbenefitimages/'~indicatorbenefitimage.id~"/")}}{{image}}" width="100%">
                        {% endautoescape %}
                        <div class="carousel-caption">
                            <h5>{{indicatorbenefitimage.getImageTitle()}}</h5>
                            <p>{{indicatorbenefitimage.getImageCaption()}}</p>
                        </div>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endif %}