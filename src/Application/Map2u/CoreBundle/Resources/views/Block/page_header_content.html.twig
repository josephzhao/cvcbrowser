        {% if (logos is defined) and (logos | length >0 ) %}

            <div  style="padding-left: 0px; padding-top: 10px; text-align: left;">
                {% set i=0 %}
                {% for logo in logos %}
                    {% if (logo.imageFilename | length > 0) %}
                        <div style="display: inline-block; margin-right:20px;">
                            <a href='http://{{logo.websiteUrl}}' target='_blank'>
                                <img src='{{asset('uploads/images/header_logos/')}}{{logo.imageFilename|e}}'>
                            </a>
                        </div>
                    {% endif %}
