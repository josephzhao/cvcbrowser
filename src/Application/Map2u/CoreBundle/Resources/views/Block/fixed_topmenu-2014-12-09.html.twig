                            <li class="locale">
                                {{ locale_switcher() }}
                            </li>
                        {% else %}
                            <li class="login">
                                <a class="login-popdown-trigger" href="{{path('fos_user_security_login')}}">Login</a>
                                <div class="login-dropdown">
                                    {{ render(controller('Map2uCoreBundle:Security:loginform', {'ajax':true})) }}
                                </div> 
                            </li>
                            <li class="locale">{{ locale_switcher() }}</li>
                            {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </nav>
