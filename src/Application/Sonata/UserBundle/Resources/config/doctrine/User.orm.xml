<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\Sonata\UserBundle\Entity\User" table="fos_user_user">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <one-to-many field="user_tourisms" target-entity="Yorku\JuturnaBundle\Entity\Tourism" mapped-by="user">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="name" direction="ASC" />
            </order-by>
        </one-to-many>
       <one-to-many field="birds" target-entity="Yorku\JuturnaBundle\Entity\Bird" mapped-by="user">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="commonName" direction="ASC" />
            </order-by>
        </one-to-many>
       <one-to-many field="stations" target-entity="Yorku\JuturnaBundle\Entity\Station" mapped-by="user">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="stationName" direction="ASC" />
            </order-by>
        </one-to-many>
       <one-to-many field="tourismgeoms" target-entity="Yorku\JuturnaBundle\Entity\TourismGeoms" mapped-by="user">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="name" direction="ASC" />
            </order-by>
        </one-to-many>
        
        
        
        <many-to-one field="membership" target-entity="Yorku\JuturnaBundle\Entity\MemberShip" inversed-by="users"/>
    </entity>
</doctrine-mapping>
